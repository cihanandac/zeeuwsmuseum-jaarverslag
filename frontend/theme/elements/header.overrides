/* HEADER BEGIN */

div.logo {
  height: 100%;
  align-items: center;
  display: flex;
  align-items: center;
}
a.logo-written {
  font-family: 'UniversCn', Arial, sans-serif;
  color: #7bb0e7 !important;
  font-size: 30px;
  padding: 22px 15px 36px;
  line-height: 20px;
  height: 57px;
  -webkit-font-smoothing: antialiased;
}

.ui.basic.segment .header .logo-nav-wrapper {
  justify-content: space-between;
  height: 30px;
}

div.ui.basic.segment.header-wrapper {
  border-bottom: 1px solid #c3c3c3;
  margin-bottom: 0px;
  background-color: #ffffff;
  position: fixed !important;
  top: 0;
  z-index: 999;
  width: 100%;
  transition-property: all;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  transition-duration: 300ms;
  padding-left: 9px !important;
  padding-right: 15px !important;
  height: 60px;

  .ui.container.header-container {
    width: 100% !important;
    padding: 0% !important;
    margin: 0% !important;
    background-color: #ffffff;
  }
  .logo {
    height: 25px !important;
    padding-bottom: 5px !important;
  }
}

div.ui.basic.segment.header-wrapper.hide {
  top: -560px;
}

div.ui.pointing.secondary.stackable {
  font-size: 17px;
  font-family: 'UniversCn', Arial, sans-serif;
  letter-spacing: 0.1em;
}

div.menu.transition {
  font-family: 'UniversLight', Arial, sans-serif;
  /* line-height: 0.01em !important; */
  right: 0% !important;
  left: auto !important;
  padding: 22px 0px 18px !important;
  min-width: 238px !important;

  div.item {
    padding-bottom: 0% !important;
    margin-bottom: 0% !important;
  }
}

nav#navigation.navigation {
  height: 60px;
  div,
  a {
    color: #000000;

    :hover {
      color: #7bb0e7;

      /* background-color: #ffffff !important; */
    }
  }
}

.ui.pointing.secondary > * {
  /* height: 58px;
  padding-top: 10px !important;
  padding-bottom: 0px !important;
  border-bottom: 0px !important; */
}
.item.simple {
  width: auto;
  outline-offset: -2px;
  padding: 22px 22px 20px !important;
  cursor: pointer;
  text-transform: uppercase;
  letter-spacing: 1.7px;
  margin-right: 0px !important;
}
.divider.text {
  padding-right: 9px;
}

.ui.item.simple.dropdown svg {
  padding-left: 6px !important;
  padding-right: 2px !important;
}

.title svg{
  padding-left: 6px !important;
  padding-right: 2px !important;
  padding-top: 3px !important;
}

.dropdown.item > .menu {
  margin-top: 0% !important;
}

div#dropdownItemA {
  margin-bottom: 0px !important;
  margin-top: 0px !important;
  margin-right: 0px !important;
  min-width: 288px !important;
  padding: 6px 29px !important;
  letter-spacing: 1.7px !important;
  font-size: 17px !important;
  border: none;

  a {
    line-height: 20px !important;
  }
}

.menu.transition {
}

.ui.menu .ui.dropdown .menu > .item {
  /* padding-top: 5px !important; */
  /* padding-bottom: 0% !important; */
}

.mobile-menu {
  top: 59px !important;
  height: auto !important;
  position: absolute !important;
}

.mobile-menu-nav {
  display: flex !important;
  flex-direction: column !important;
  width: 100% !important;
  padding-left: 22px !important;
  padding-top: 20px !important;
  padding-bottom: 15px;
  justify-content: flex-start !important;
  align-items: flex-start !important;
  font-family: 'UniversCn', Arial, sans-serif !important;
  letter-spacing: 0.1em;

  div {
    padding-bottom: 5px;
    font-size: 17px !important;

    a.item.simple {
      padding-left: 0% !important;
    }

    .title {
      font-family: 'UniversCn', Arial, sans-serif !important;
    }
    .content {
      font-family: 'UniversLight', Arial, sans-serif !important;
      margin-left: 31px;
      padding-bottom: 0px !important;
      padding-top: 0px !important;
    }
  }

  div.active.title {
    color: #7bb0e7 !important;
  }

  div.ui.secondary.vertical.menu {
    padding-top: 45px;
    padding-left: 30px;
    width: 200px;
    a.item {
      text-align: start;
    }
  }
}

.hamburger {
  padding: 0% !important;
}

.hamburger-inner,
.hamburger-inner::before,
.hamburger-inner::after {
  height: 2px !important;
  width: 23px !important;
  background-color: #808080 !important;
}

span.hamburger-box {
  height: 45px;
}

.hamburger-inner::before {
  top: -6px !important;
}
.hamburger-inner::after {
  bottom: -6px !important;
}

.hamburger.hamburger--spin.is-active {
  .hamburger-inner::before {
    top: 0px !important;
  }
  .hamburger-inner::after {
    bottom: 0px !important;
  }
}

.accordion.ui {
  width: 300px;
  text-align: left;
  padding-top: 5px;
  letter-spacing: 0.1em;
  line-height: 1.5em;
}

i.dropdown.icon,
i.dropdown.icon::before {
  display: none;
}

/* HEADER END */
